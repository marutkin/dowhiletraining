<section class="trainingsWrap">
<div class="trainbox">
    <a class="btn-floating btn-large waves-effect waves-light red modal-trigger" href="#createTrainingModal"><i class="material-icons">add</i></a>
</div>

<!-- Modal Structure -->
<div id="createTrainingModal" class="modal">
    <div class="modal-content">
        <h4>Окно создания тренировок</h4>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <select id="type" class="materialSelect">
                        <option value="" disabled selected>Выберите тип тренировки</option>
                        </select>
                        <label>Тип тренировки</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input placeholder="Тренажер" id="apparat" type="text" disabled="disabled" class="validate">
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input placeholder="Введите результат" id="count" type="text" class="validate">
                        <label for="count">Результат</label>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button id="save" class="btn waves-effect waves-light" type="submit" name="action">
            Сохранить
            <i class="material-icons right"></i>
        </button>
        <button id="close" class="btn waves-effect waves-light" type="submit" name="action">
            Закрыть
            <i class="material-icons right"></i>
        </button>
    </div>
</div>

  <!-- Modal Structure -->
  <div id="deleteTrainingModal" class="modal">
    <div class="modal-content">
      <h4>Удаление тренировки</h4>
      <p>Удалить тренировку?</p>
    </div>
    <div class="modal-footer">
        <button id="delete" class="btn waves-effect waves-light" type="submit" name="action">
            Удалить
            <i class="material-icons right"></i>
        </button>
        <button id="closeDelete" class="btn waves-effect waves-light" type="submit" name="action">
            Закрыть
            <i class="material-icons right"></i>
        </button>
    </div>
  </div>
