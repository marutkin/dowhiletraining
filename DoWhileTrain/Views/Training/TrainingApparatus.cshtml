<section class="trainingTypesWrap">
    <!-- Modal Trigger -->
    <a id="btnCreateTrainingApparat" class="waves-effect waves-light btn modal-trigger" href="#createTrainingApparatModal">Добавить тренажер</a>

    <!-- Modal Structure -->
    <div id="createTrainingApparatModal" class="modal">
        <div class="modal-content">
            <h4>Окно добавления тренажера</h4>
            <div class="row">
                <form class="col s12">

                    <div class="row">
                        <div class="input-field col s12">
                            <input placeholder="Введите название тренажера.." id="apparatName" type="text" class="validate">
                            <label for="apparatName">Название тренажера</label>
                        </div>                        
                    </div>
                </form>
            </div>
        </div>
        <div class="modal-footer">
            <button id="save" class="btn waves-effect waves-light" type="submit" name="action">
                Сохранить
                <i class="material-icons right"></i>
            </button>
            <button id="close" class="btn waves-effect waves-light" type="submit" name="action">
                Закрыть
                <i class="material-icons right"></i>
            </button>
        </div>
    </div>

    <!-- Modal Structure -->
    <div id="deleteTrainingApparatModal" class="modal">
        <div class="modal-content">
            <h4>Удаление тренажера</h4>
            <p>Удалить тренажер?</p>
        </div>
        <div class="modal-footer">
            <button id="delete" class="btn waves-effect waves-light" type="submit" name="action">
                Удалить
                <i class="material-icons right"></i>
            </button>
            <button id="closeDelete" class="btn waves-effect waves-light" type="submit" name="action">
                Закрыть
                <i class="material-icons right"></i>
            </button>
        </div>
    </div>

    <div class="collection"></div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/TrainingApparatus")
}

