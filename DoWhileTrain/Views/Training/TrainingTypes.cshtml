<section class="trainingTypesWrap">
<!-- Modal Trigger -->
<a id="btnCreateTrainingType" class="waves-effect waves-light btn modal-trigger" href="#createTrainingTypeModal">Создать тип тренировки</a>

<!-- Modal Structure -->
<div id="createTrainingTypeModal" class="modal">
    <div class="modal-content">
        <h4>Окно создания тренировок</h4>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <input placeholder="Введите название тренировки.." id="first_name" type="text" class="validate">
                        <label for="first_name">Название тренировки</label>
                    </div>
                <div class="row">
                    <div class="input-field col s12">
                        <select id="apparat">
                        <option value="" disabled selected>Выберите вид тренажера</option>
                        </select>
                        <label>Вид тренажера</label>
                    </div>
                </div>
                    <form action="#">
                            <p>
                            <label>
                                <input id ="isCardio" name="group1" type="radio" checked />
                                <span>Кардио</span>
                            </label>
                            </p>
                            <p>
                            <label>
                                <input id="isForce" name="group1" type="radio" />
                                <span>Силовая</span>
                            </label>
                            </p>                          
                        </form>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button id="save" class="btn waves-effect waves-light" type="submit" name="action">
            Сохранить
            <i class="material-icons right"></i>
        </button>
        <button id="close" class="btn waves-effect waves-light" type="submit" name="action">
            Закрыть
            <i class="material-icons right"></i>
        </button>
    </div>
</div>

  <!-- Modal Structure -->
  <div id="deleteTrainingTypeModal" class="modal">
    <div class="modal-content">
      <h4>Удаление типа тренировки</h4>
      <p>Удалить тренировку?</p>
    </div>
    <div class="modal-footer">
        <button id="delete" class="btn waves-effect waves-light" type="submit" name="action">
            Удалить
            <i class="material-icons right"></i>
        </button>
        <button id="closeDelete" class="btn waves-effect waves-light" type="submit" name="action">
            Закрыть
            <i class="material-icons right"></i>
        </button>
    </div>
  </div>

<div class="collection"></div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/TrainingTypes")
}

